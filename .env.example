# ===========================================
# MythoPlay Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=mythoplay
POSTGRES_USER=mythoplay
POSTGRES_PASSWORD=mythoplay123

# Full Database URL (used by backend)
DATABASE_URL=postgresql://mythoplay:mythoplay123@postgres:5432/mythoplay

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:4000

# Node Environment
NODE_ENV=production

